<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="550.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.messanger_oop.CreateChatController">
    <children>
        <Label layoutX="14.0" layoutY="20.0" text="Создание нового чата">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>

        <Label layoutX="30.0" layoutY="70.0" text="Название чата:" />
        <TextField fx:id="chatNameField" layoutX="150.0" layoutY="65.0" prefHeight="30.0" prefWidth="300.0" promptText="Введите название чата" />

        <Label layoutX="30.0" layoutY="120.0" text="Доступные пользователи:" />
        <ListView fx:id="usersListView" layoutX="30.0" layoutY="140.0" prefHeight="300.0" prefWidth="250.0" />

        <Label layoutX="420.0" layoutY="120.0" text="Участники чата:" />
        <ListView fx:id="selectedUsersListView" layoutX="420.0" layoutY="140.0" prefHeight="300.0" prefWidth="250.0" />

        <Button fx:id="addUserButton" layoutX="300.0" layoutY="220.0" mnemonicParsing="false" onAction="#handleAddUser" text="Добавить →" prefWidth="100.0" />
        <Button fx:id="removeUserButton" layoutX="300.0" layoutY="260.0" mnemonicParsing="false" onAction="#handleRemoveUser" text="← Удалить" prefWidth="100.0" />

        <Button fx:id="createChatButton" layoutX="200.0" layoutY="470.0" mnemonicParsing="false" onAction="#handleCreateChat" prefHeight="40.0" prefWidth="150.0" text="Создать чат" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
        <Button fx:id="cancelButton" layoutX="380.0" layoutY="470.0" mnemonicParsing="false" onAction="#handleCancel" prefHeight="40.0" prefWidth="150.0" text="Отмена" style="-fx-background-color: #f44336; -fx-text-fill: white;" />

        <Label layoutX="30.0" layoutY="460.0" text="* Выберите участников и укажите название чата" />
    </children>
</AnchorPane>
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.messanger_oop.RegisterController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Регистрация" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <StackPane>
        <ImageView fx:id="avatarImageView" fitWidth="100" fitHeight="100">
            <image>
                <Image url="@default-avatar.png" />
            </image>
        </ImageView>
        <Button fx:id="uploadAvatarButton" text="+" style="-fx-background-radius: 15; -fx-min-width: 30; -fx-min-height: 30;" StackPane.alignment="BOTTOM_RIGHT" />
    </StackPane>

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="100" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="200" prefWidth="200" />
        </columnConstraints>

        <Label text="Имя:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="firstNameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Фамилия:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="lastNameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Почта:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="Логин:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label text="Пароль:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    </GridPane>

    <!-- Кнопки -->
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="registerButton" text="Зарегистрироваться" defaultButton="true" />
    </HBox>

    <!-- Статус -->
    <Label fx:id="statusLabel" style="-fx-text-fill: red;" />
</VBox>
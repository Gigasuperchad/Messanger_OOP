<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.messanger_oop.ProfileController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!-- Аватар -->
    <ImageView fx:id="avatarImageView" fitWidth="100" fitHeight="100">
        <image>
            <Image url="@default-avatar.png" />
        </image>
    </ImageView>

    <!-- Информация о пользователе -->
    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="100" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="200" prefWidth="200" />
        </columnConstraints>

        <Label text="Имя:" GridPane.columnIndex="0" GridPane.rowIndex="0"
               style="-fx-font-weight: bold;" />
        <Label fx:id="firstNameLabel" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Фамилия:" GridPane.columnIndex="0" GridPane.rowIndex="1"
               style="-fx-font-weight: bold;" />
        <Label fx:id="lastNameLabel" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2"
               style="-fx-font-weight: bold;" />
        <Label fx:id="emailLabel" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="Логин:" GridPane.columnIndex="0" GridPane.rowIndex="3"
               style="-fx-font-weight: bold;" />
        <Label fx:id="nicknameLabel" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    </GridPane>

    <!-- Кнопка назад -->
    <Button text="Назад к чатам" onAction="#handleBackToChats" />
</VBox>